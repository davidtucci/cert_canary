{
    "manifest_version": 2,
    "name": "Cert Canary",
    "version": "0.1",
    "description": "Warns of pending certificate expiration",
    "icons": {
        "96": "icons/canary96.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "96": "icons/canary96.png"
        },
        "default_title": "Cert Canary",
        "default_popup": "popup/canary.html"
    },
    "permissions": ["webNavigation", "webRequest", "webRequestBlocking", "<all_urls>"],
    "background":{
        "scripts": [ "background.js" ]
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["canary.js"]
        }
    ]
}